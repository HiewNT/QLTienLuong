@model QLTienLuong.Models.KhenThuongKyLuat

@{
    ViewData["Title"] = "Xóa Khen thưởng/Kỷ luật";
    var isKhenThuong = Model.LoaiHinh?.Contains("Khen") == true;
    var isKyLuat = Model.LoaiHinh?.Contains("luật") == true;
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1 text-danger">
                <i class="fas fa-trash me-2"></i>Xóa @(isKhenThuong ? "Khen thưởng" : isKyLuat ? "Kỷ luật" : "Quyết định")
            </h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            <i class="fas fa-award me-1"></i>Khen thưởng/Kỷ luật
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Xóa: @Model.MaQuyetDinh</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <!-- Warning Card -->
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa @(isKhenThuong ? "khen thưởng" : isKyLuat ? "kỷ luật" : "quyết định") này không? 
                Hành động này không thể hoàn tác.
            </div>

            <!-- Thông tin sẽ xóa -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="info-section">
                        <label class="form-label text-muted">
                            <i class="fas fa-id-card me-1"></i>Mã Quyết định
                        </label>
                        <p class="form-control-plaintext fw-bold text-primary">@Html.DisplayFor(model => model.MaQuyetDinh)</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-section">
                        <label class="form-label text-muted">
                            <i class="fas fa-user me-1"></i>Học viên
                        </label>
                        <p class="form-control-plaintext fw-bold">
                            @if (Model.MaHocVienNavigation != null)
                            {
                                <span>@Model.MaHocVienNavigation.HoTen</span>
                                <br><small class="text-muted">@Model.MaHocVien</small>
                            }
                            else
                            {
                                <span class="text-muted">Không xác định</span>
                            }
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-section">
                        <label class="form-label text-muted">
                            <i class="fas fa-list me-1"></i>Loại hình
                        </label>
                        <div class="form-control-plaintext">
                            @if (isKhenThuong)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-award me-1"></i>@Model.LoaiHinh
                                </span>
                            }
                            else if (isKyLuat)
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-exclamation-triangle me-1"></i>@Model.LoaiHinh
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.LoaiHinh</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-section">
                        <label class="form-label text-muted">
                            <i class="fas fa-calendar me-1"></i>Ngày Quyết định
                        </label>
                        <p class="form-control-plaintext fw-bold">
                            @if (Model.NgayQuyetDinh.HasValue)
                            {
                                @Model.NgayQuyetDinh.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted">Chưa xác định</span>
                            }
                        </p>
                    </div>
                </div>
                @if (Model.SoTien.HasValue && Model.SoTien > 0)
                {
                    <div class="col-md-6">
                        <div class="info-section">
                            <label class="form-label text-muted">
                                <i class="fas fa-money-bill me-1"></i>Số tiền
                            </label>
                            <p class="form-control-plaintext fw-bold @(isKhenThuong ? "text-success" : isKyLuat ? "text-danger" : "text-primary")">
                                @Model.SoTien.Value.ToString("N0") VNĐ
                            </p>
                        </div>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.LyDo))
            {
                <div class="mb-4">
                    <label class="form-label text-muted">
                        <i class="fas fa-file-text me-1"></i>Lý do
                    </label>
                    <div class="bg-light p-3 rounded">
                        <p class="mb-0" style="white-space: pre-line; max-height: 100px; overflow-y: auto;">@Model.LyDo</p>
                    </div>
                </div>
            }

            <!-- Actions -->
            <div class="d-flex gap-2 mt-4">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="MaQuyetDinh" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')">
                        <i class="fas fa-trash me-1"></i>Xác nhận xóa
                    </button>
                </form>
                <a asp-action="Details" asp-route-id="@Model.MaQuyetDinh" class="btn btn-info">
                    <i class="fas fa-eye me-1"></i>Xem chi tiết
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Hủy bỏ
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.info-section {
    margin-bottom: 1rem;
}

.info-section:last-child {
    margin-bottom: 0;
}
</style>
