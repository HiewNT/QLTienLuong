@model IEnumerable<QLTienLuong.Models.KhenThuongKyLuat>

@{
    ViewData["Title"] = "Khen thưởng Kỷ luật";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-award me-2 text-warning"></i>Quản lý Khen thưởng & Kỷ luật
            </h4>
            <p class="text-muted mb-0">Danh sách các quyết định khen thưởng và kỷ luật học viên</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Thêm quyết định
            </a>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="khenThuongTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã</th>
                            <th>Học viên</th>
                            <th>Loại hình</th>
                            <th>Ngày QĐ</th>
                            <th>Số tiền</th>
                            <th>Nội dung</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.MaQuyetDinh)</span>
                                </td>
                                <td>
                                    <div class="fw-bold">@Html.DisplayFor(modelItem => item.MaHocVienNavigation.HoTen)</div>
                                    <small class="text-muted">@item.MaHocVien</small>
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.LoaiHinh))
                                    {
                                        @if (item.LoaiHinh == "Khen thưởng")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-trophy me-1"></i>@item.LoaiHinh
                                            </span>
                                        }
                                        else if (item.LoaiHinh == "Kỷ luật")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-exclamation-triangle me-1"></i>@item.LoaiHinh
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-question-circle me-1"></i>@item.LoaiHinh
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.NgayQuyetDinh.HasValue)
                                    {
                                        <span>@item.NgayQuyetDinh.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (item.SoTien.HasValue && item.SoTien.Value > 0)
                                    {
                                        <div class="text-success fw-bold">@item.SoTien.Value.ToString("N0")</div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.LyDo))
                                    {
                                        <div>@item.LyDo</div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.NgayQuyetDinh.HasValue)
                                    {
                                        @if (item.NgayQuyetDinh.Value <= DateOnly.FromDateTime(DateTime.Now))
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Đã có hiệu lực
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-clock me-1"></i>Chờ hiệu lực
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-question-circle me-1"></i>Chưa rõ
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.MaQuyetDinh" 
                                           class="btn btn-outline-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.MaQuyetDinh" 
                                           class="btn btn-outline-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MaQuyetDinh" 
                                           class="btn btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-award fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Chưa có dữ liệu</h5>
                    <p class="text-muted">Nhấn "Thêm quyết định" để thêm quyết định khen thưởng/kỷ luật đầu tiên.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Thêm quyết định mới
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#khenThuongTable').DataTable({
                language: {
                    "sProcessing": "Đang xử lý...",
                    "sLengthMenu": "Xem _MENU_ mục",
                    "sZeroRecords": "Không tìm thấy dữ liệu",
                    "sInfo": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ mục",
                    "sInfoEmpty": "Đang xem 0 đến 0 trong tổng số 0 mục",
                    "sInfoFiltered": "(được lọc từ _MAX_ mục)",
                    "sInfoPostFix": "",
                    "sSearch": "Tìm kiếm:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "Đầu",
                        "sPrevious": "Trước",
                        "sNext": "Tiếp",
                        "sLast": "Cuối"
                    }
                },
                responsive: true,
                pageLength: 25,
                order: [[3, 'desc']], // Sort by date desc
                columnDefs: [
                    { orderable: false, targets: [7] } // Thao tác column (now index 7)
                ]
            });
        });
    </script>
}