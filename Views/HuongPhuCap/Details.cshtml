@model QLTienLuong.Models.HuongPhuCapViewModel

@{
    ViewData["Title"] = "Chi tiết Hưởng Phụ cấp";
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-hand-holding-usd me-2"></i>Chi tiết Hưởng Phụ cấp
            </h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            <i class="fas fa-hand-holding-usd me-1"></i>Hưởng Phụ cấp
                        </a>
                    </li>
                    <li class="breadcrumb-item active">ID: @Model.MaHuongPhuCap</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.MaHuongPhuCap" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Danh sách phụ cấp (Bên trái) -->
        <div class="col-lg-8 mb-4">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-list me-2"></i>Danh mục phụ cấp được áp dụng
                    </h6>
                </div>
                <div class="card-body p-2">
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th width="50"><i class="fas fa-hashtag me-1"></i>STT</th>
                                    <th width="120"><i class="fas fa-tag me-1"></i>Mã phụ cấp</th>
                                    <th><i class="fas fa-hand-holding-usd me-1"></i>Tên phụ cấp</th>
                                    <th width="120" class="text-end"><i class="fas fa-money-bill me-1"></i>Mức phụ cấp</th>
                                    <th width="100" class="text-center"><i class="fas fa-calendar me-1"></i>Ngày áp dụng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int stt = 1;
                                }
                                @foreach (var phuCap in Model.DanhMucPhuCaps)
                                {
                                    <tr>
                                        <td class="text-center"><span class="badge bg-primary badge-sm">@stt</span></td>
                                        <td><span class="badge bg-secondary badge-sm">@phuCap.MaPhuCap</span></td>
                                        <td><div class="fw-bold small">@phuCap.TenPhuCap</div></td>
                                        <td class="text-end">
                                            @if (phuCap.MucPhuCap.HasValue)
                                            {
                                                <div class="text-success fw-bold small">@phuCap.MucPhuCap.Value.ToString("N0")</div>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">--</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (phuCap.NgayApDung.HasValue)
                                            {
                                                <span class="badge bg-info badge-sm">@phuCap.NgayApDung.Value.ToString("dd/MM/yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">--</span>
                                            }
                                        </td>
                                    </tr>
                                    stt++;
                                }
                                @if (!Model.DanhMucPhuCaps.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-3">
                                            <i class="fas fa-info-circle me-1"></i>Chưa có danh mục phụ cấp nào được áp dụng
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin chi tiết (Bên phải) -->
        <div class="col-lg-4 mb-4">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin chi tiết
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label text-muted small">
                            <i class="fas fa-hashtag me-1"></i>ID
                        </label>
                        <p class="form-control-plaintext fw-bold text-primary">@Html.DisplayFor(model => model.MaHuongPhuCap)</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small">
                            <i class="fas fa-user me-1"></i>Học viên
                        </label>
                        <div class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.HoTen))
                            {
                                <div class="fw-bold">@Model.HoTen</div>
                                <small class="text-muted">@Model.MaHocVien</small>
                            }
                            else
                            {
                                <span class="text-muted">Chưa xác định</span>
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small">
                            <i class="fas fa-graduation-cap me-1"></i>Khóa
                        </label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Khoa))
                            {
                                <span class="badge bg-info badge-sm">@Model.Khoa</span>
                            }
                            else
                            {
                                <span class="text-muted small">Chưa xác định</span>
                            }
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small">
                            <i class="fas fa-users me-1"></i>Lớp
                        </label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Lop))
                            {
                                <span class="badge bg-success badge-sm">@Model.Lop</span>
                            }
                            else
                            {
                                <span class="text-muted small">Chưa xác định</span>
                            }
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small">
                            <i class="fas fa-calendar me-1"></i>Tháng/Năm
                        </label>
                        <p class="form-control-plaintext">
                            @if (Model.ThangNam.HasValue)
                            {
                                <span class="badge bg-info badge-sm">@Model.ThangNam.Value.ToString("MM/yyyy")</span>
                            }
                            else
                            {
                                <span class="text-muted small">Chưa xác định</span>
                            }
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small">
                            <i class="fas fa-signature me-1"></i>Ký nhận
                        </label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Ky))
                            {
                                <span class="badge bg-secondary badge-sm">@Model.Ky</span>
                            }
                            else
                            {
                                <span class="text-muted small">Chưa xác định</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <!-- Thông tin tài chính -->
        <div class="col-lg-12 mb-4">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-money-bill me-2"></i>Tổng kết tài chính
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Phụ cấp -->
                        <div class="col-md-6 mb-3">
                            <div class="card border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Phụ cấp</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <div class="text-primary fw-bold small">@Model.PhuCapCoBan?.ToString("N0")</div>
                                            <small class="text-muted">Cơ bản</small>
                                        </div>
                                        <div class="col-4">
                                            <div class="text-info fw-bold small">@Model.PhuCapT7CN?.ToString("N0")</div>
                                            <small class="text-muted">T7+CN</small>
                                        </div>
                                        <div class="col-4">
                                            <div class="text-warning fw-bold small">@Model.PhuCapSua?.ToString("N0")</div>
                                            <small class="text-muted">Sữa</small>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="text-center">
                                        <div class="text-success fw-bold">@Model.TinhTongPhuCap?.ToString("N0") VNĐ</div>
                                        <small class="text-muted">Tổng phụ cấp</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Các khoản trừ -->
                        <div class="col-md-6 mb-3">
                            <div class="card border-danger">
                                <div class="card-header bg-danger text-white">
                                    <h6 class="mb-0"><i class="fas fa-minus-circle me-2"></i>Các khoản trừ</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        @if (Model.DoanPhi.HasValue && Model.DoanPhi.Value > 0)
                                        {
                                            <div class="col-4">
                                                <div class="text-danger fw-bold small">-@Model.DoanPhi.Value.ToString("N0")</div>
                                                <small class="text-muted">Đoàn phí</small>
                                            </div>
                                        }
                                        @if (Model.LopHoc.HasValue && Model.LopHoc.Value > 0)
                                        {
                                            <div class="col-4">
                                                <div class="text-danger fw-bold small">-@Model.LopHoc.Value.ToString("N0")</div>
                                                <small class="text-muted">Lớp học</small>
                                            </div>
                                        }
                                        @if (Model.TrUung.HasValue && Model.TrUung.Value > 0)
                                        {
                                            <div class="col-4">
                                                <div class="text-danger fw-bold small">-@Model.TrUung.Value.ToString("N0")</div>
                                                <small class="text-muted">Trừ ứng</small>
                                            </div>
                                        }
                                    </div>
                                    <hr>
                                    <div class="text-center">
                                        <div class="text-primary fw-bold">@Model.TinhConNhan?.ToString("N0") VNĐ</div>
                                        <small class="text-muted">Còn nhận</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex gap-2 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.MaHuongPhuCap" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>Chỉnh sửa
        </a>
        <a asp-action="Delete" asp-route-id="@Model.MaHuongPhuCap" class="btn btn-outline-danger">
            <i class="fas fa-trash me-1"></i>Xóa
        </a>

        <button class="btn btn-outline-secondary" onclick="window.print()">
            <i class="fas fa-print me-1"></i>In thông tin
        </button>
    </div>
</div>

<style>
.info-item {
    padding: 0.5rem 0;
}

.table-sm td, .table-sm th {
    padding: 0.3rem;
    vertical-align: middle;
}
.badge-sm {
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
}
.small {
    font-size: 0.8rem;
}
.card-body {
    padding: 1rem;
}
.card-body.p-2 {
    padding: 0.5rem !important;
}

media print {
    .btn, .breadcrumb, nav {
        display: none !important;
    }
    
    .card {
        border: 1px solid #000 !important;
        box-shadow: none !important;
    }
}
</style>

