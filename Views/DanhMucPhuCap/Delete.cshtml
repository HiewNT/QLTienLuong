@model QLTienLuong.Models.DanhMucPhuCap

@{
    ViewData["Title"] = "Xóa phụ cấp";
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0 text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa phụ cấp
        </h3>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Cảnh báo!</strong> Bạn đang thực hiện xóa phụ cấp. Hành động này không thể hoàn tác.
    </div>

    <!-- Details Card -->
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="fas fa-trash me-2"></i>Thông tin phụ cấp sẽ bị xóa
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fas fa-id-card me-1"></i>Mã Phụ cấp
                        </label>
                        <div class="form-control-plaintext">
                            <strong>@Model.MaPhuCap</strong>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fas fa-tag me-1"></i>Tên Phụ cấp
                        </label>
                        <div class="form-control-plaintext">
                            <strong>@Model.TenPhuCap</strong>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fas fa-money-bill me-1"></i>Mức Phụ cấp cơ bản
                        </label>
                        <div class="form-control-plaintext">
                            @if (Model.MucPhuCapCoBan.HasValue)
                            {
                                <span class="text-success fw-bold">@Model.MucPhuCapCoBan.Value.ToString("N0") VNĐ</span>
                            }
                            else
                            {
                                <span class="text-muted">Chưa xác định</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.MoTa))
            {
                <div class="mb-3">
                    <label class="form-label text-muted">
                        <i class="fas fa-file-text me-1"></i>Mô tả
                    </label>
                    <div class="form-control-plaintext">
                        <div class="border rounded p-3 bg-light">
                            @Model.MoTa
                        </div>
                    </div>
                </div>
            }

            <hr class="my-4">

            <!-- Confirmation Form -->
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="MaPhuCap" />
                
                <div class="text-center">
                    <div class="alert alert-danger d-inline-block">
                        <i class="fas fa-question-circle me-2"></i>
                        <strong>Bạn có chắc chắn muốn xóa phụ cấp này không?</strong>
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-danger me-3">
                            <i class="fas fa-trash me-1"></i>Xác nhận xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>Hủy bỏ
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Form confirmation
            $('form').on('submit', function(e) {
                if (!confirm('Bạn có chắc chắn muốn xóa phụ cấp này? Hành động này không thể hoàn tác!')) {
                    e.preventDefault();
                    return false;
                }
                
                var $btn = $('button[type="submit"]');
                $btn.prop('disabled', true);
                $btn.html('<i class="fas fa-spinner fa-spin me-1"></i>Đang xóa...');
            });
        });
    </script>
}
