@model QLTienLuong.Models.DanhMucPhuCap

@{
    ViewData["Title"] = "Thêm học viên vào danh mục phụ cấp";
    var availableCount = ViewBag.AvailableCount as int? ?? 0;
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-user-plus me-2"></i>Thêm học viên vào danh mục phụ cấp
            </h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            <i class="fas fa-list me-1"></i>Danh mục phụ cấp
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Details" asp-route-id="@Model.MaPhuCap">
                            @Model.TenPhuCap
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Thêm học viên</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.MaPhuCap" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin danh mục phụ cấp -->
        <div class="col-lg-4 mb-4">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-tag me-2"></i>Thông tin danh mục phụ cấp
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fas fa-hashtag me-1"></i>Mã phụ cấp
                        </label>
                        <p class="form-control-plaintext fw-bold text-primary">@Model.MaPhuCap</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fas fa-hand-holding-usd me-1"></i>Tên phụ cấp
                        </label>
                        <p class="form-control-plaintext fw-bold">@Model.TenPhuCap</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fas fa-money-bill me-1"></i>Mức phụ cấp
                        </label>
                        <p class="form-control-plaintext fw-bold text-success">
                            @(Model.MucPhuCapCoBan?.ToString("N0") ?? "0") VNĐ
                        </p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.MoTa))
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-info-circle me-1"></i>Mô tả
                            </label>
                            <p class="form-control-plaintext">@Model.MoTa</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Form thêm học viên -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Thêm học viên
                    </h5>
                </div>
                <div class="card-body">
                    @if (availableCount > 0)
                    {
                        <form asp-action="AddStudentForm" method="post">
                            <input type="hidden" name="MaPhuCap" value="@Model.MaPhuCap" />
                            
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-users me-1"></i>Chọn học viên <span class="text-danger">*</span>
                                </label>
                                <div class="form-control" style="height: auto; max-height: 300px; overflow-y: auto;">
                                    @if (ViewData["MaHocVien"] is SelectList studentList && studentList.Any())
                                    {
                                        @foreach (var student in studentList)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="SelectedStudents" value="@student.Value" id="student_@student.Value">
                                                <label class="form-check-label" for="student_@student.Value">
                                                    @student.Text
                                                </label>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-0">Không có học viên nào có sẵn</p>
                                    }
                                </div>
                                <small class="text-muted">Có @availableCount học viên có thể thêm. Chọn tất cả hoặc một số học viên.</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-calendar me-1"></i>Ngày áp dụng <span class="text-danger">*</span>
                                </label>
                                <input type="date" name="NgayApDung" class="form-control" required />
                                <small class="text-muted">Ngày bắt đầu áp dụng phụ cấp này cho các học viên được chọn</small>
                            </div>

                            <div class="d-flex gap-2 mb-3">
                                <button type="button" class="btn btn-outline-info btn-sm" onclick="selectAll()">
                                    <i class="fas fa-check-double me-1"></i>Chọn tất cả
                                </button>
                                <button type="button" class="btn btn-outline-warning btn-sm" onclick="clearAll()">
                                    <i class="fas fa-times me-1"></i>Bỏ chọn tất cả
                                </button>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-plus me-1"></i>Thêm học viên đã chọn
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.MaPhuCap" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i>Hủy
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-info-circle text-info fa-3x mb-3"></i>
                            <h5 class="text-muted">Không có học viên nào có thể thêm</h5>
                            <p class="text-muted">Tất cả học viên đã được thêm vào danh mục phụ cấp này.</p>
                            <a asp-action="Details" asp-route-id="@Model.MaPhuCap" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set default date to today
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            const dateInput = document.querySelector('input[name="NgayApDung"]');
            if (dateInput) {
                dateInput.value = today;
            }
        });

        // Select all checkboxes
        function selectAll() {
            const checkboxes = document.querySelectorAll('input[name="SelectedStudents"]');
            checkboxes.forEach(checkbox => checkbox.checked = true);
        }

        // Clear all checkboxes
        function clearAll() {
            const checkboxes = document.querySelectorAll('input[name="SelectedStudents"]');
            checkboxes.forEach(checkbox => checkbox.checked = false);
        }

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const selectedStudents = document.querySelectorAll('input[name="SelectedStudents"]:checked');
            if (selectedStudents.length === 0) {
                e.preventDefault();
                alert('Vui lòng chọn ít nhất một học viên!');
                return false;
            }
        });
    </script>
}
