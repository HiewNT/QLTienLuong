@model IEnumerable<QLTienLuong.Models.DanhMucPhuCap>

@{
    ViewData["Title"] = "Danh mục Phụ cấp";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-money-bill me-2"></i>Quản lý Danh mục Phụ cấp
            </h4>
            <p class="text-muted mb-0">Danh sách các loại phụ cấp và quản lý học viên áp dụng</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Thêm danh mục
            </a>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="danhMucTable">
                    <thead class="table-light">
                        <tr>
                            <th width="80">ID</th>
                            <th width="200">Tên phụ cấp</th>
                            <th width="150">Mô tả</th>
                            <th width="120">Mức phụ cấp</th>
                            <th width="150">Học viên áp dụng</th>
                            <th width="150">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="badge bg-primary">@Html.DisplayFor(modelItem => item.MaPhuCap)</span></td>
                                <td>
                                    <div class="fw-bold">@Html.DisplayFor(modelItem => item.TenPhuCap)</div>
                                </td>
                                <td>
                                    <div>@Html.DisplayFor(modelItem => item.MoTa)</div>
                                </td>
                                <td class="text-end">
                                    <div class="text-success fw-bold">@(((decimal)item.MucPhuCapCoBan).ToString("N0"))</div>
                                </td>
                                <td class="text-center">
                                    @if (item.PhuCapHocViens != null && item.PhuCapHocViens.Any())
                                    {
                                        <div>
                                            <span class="badge bg-primary">@item.PhuCapHocViens.Count học viên</span>
                                            <div class="text-muted mt-1">
                                                @foreach (var phuCapHocVien in item.PhuCapHocViens.Take(2))
                                                {
                                                    <span class="me-1">@phuCapHocVien.MaHocVienNavigation?.HoTen</span>
                                                }
                                                @if (item.PhuCapHocViens.Count > 2)
                                                {
                                                    <span>và @(item.PhuCapHocViens.Count - 2) khác...</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có học viên</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.MaPhuCap"
                                           class="btn btn-outline-info" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="AddStudentForm" asp-route-id="@item.MaPhuCap"
                                           class="btn btn-outline-success" title="Thêm học viên">
                                            <i class="fas fa-user-plus"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.MaPhuCap"
                                           class="btn btn-outline-warning" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MaPhuCap"
                                           class="btn btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-money-bill fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Chưa có dữ liệu</h5>
                    <p class="text-muted">Nhấn "Thêm danh mục" để thêm loại phụ cấp đầu tiên.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Thêm danh mục mới
                    </a>
                </div>
            }
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#danhMucTable').DataTable({
                language: {
                    "sProcessing": "Đang xử lý...",
                    "sLengthMenu": "Xem _MENU_ mục",
                    "sZeroRecords": "Không tìm thấy dữ liệu",
                    "sInfo": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ mục",
                    "sInfoEmpty": "Đang xem 0 đến 0 trong tổng số 0 mục",
                    "sInfoFiltered": "(được lọc từ _MAX_ mục)",
                    "sInfoPostFix": "",
                    "sSearch": "Tìm kiếm:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "Đầu",
                        "sPrevious": "Trước",
                        "sNext": "Tiếp",
                        "sLast": "Cuối"
                    }
                },
                responsive: true,
                pageLength: 25,
                order: [[0, 'asc']],
                columnDefs: [
                    { orderable: false, targets: [5] } // Last column (Thao tác) is not sortable
                ]
            });
        });
    </script>
}