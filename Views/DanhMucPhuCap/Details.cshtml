@model QLTienLuong.Models.DanhMucPhuCap

@{
    ViewData["Title"] = "Chi tiết Danh mục Phụ cấp";
}

<div class="fade-in">
    @Html.AntiForgeryToken()
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-money-bill me-2"></i>Chi tiết Danh mục Phụ cấp
            </h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            <i class="fas fa-money-bill me-1"></i>Danh mục Phụ cấp
                        </a>
                    </li>
                    <li class="breadcrumb-item active">@Model.TenPhuCap</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="AddStudentForm" asp-route-id="@Model.MaPhuCap" class="btn btn-success">
                <i class="fas fa-user-plus me-1"></i>Thêm học viên
            </a>
            <a asp-action="Edit" asp-route-id="@Model.MaPhuCap" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Danh sách học viên (Bên trái) -->
        <div class="col-lg-8 mb-4">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>Học viên được áp dụng (@Model.PhuCapHocViens.Count)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th width="50"><i class="fas fa-hashtag me-1"></i>STT</th>
                                    <th width="120"><i class="fas fa-id-card me-1"></i>Mã học viên</th>
                                    <th><i class="fas fa-user me-1"></i>Họ và tên</th>
                                    <th width="100"><i class="fas fa-graduation-cap me-1"></i>Khóa</th>
                                    <th width="80"><i class="fas fa-users me-1"></i>Lớp</th>
                                    <th width="100" class="text-center"><i class="fas fa-calendar me-1"></i>Ngày áp dụng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int stt = 1;
                                }
                                @foreach (var phuCapHocVien in Model.PhuCapHocViens)
                                {
                                    <tr>
                                        <td class="text-center"><span class="badge bg-primary">@stt</span></td>
                                        <td><span class="badge bg-secondary">@phuCapHocVien.MaHocVien</span></td>
                                        <td><div class="fw-bold">@phuCapHocVien.MaHocVienNavigation?.HoTen</div></td>
                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(phuCapHocVien.MaHocVienNavigation?.Khoa))
                                            {
                                                <span class="badge bg-info">@phuCapHocVien.MaHocVienNavigation.Khoa</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">--</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(phuCapHocVien.MaHocVienNavigation?.Lop))
                                            {
                                                <span class="badge bg-success">@phuCapHocVien.MaHocVienNavigation.Lop</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">--</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (phuCapHocVien.NgayApDung.HasValue)
                                            {
                                                <span class="badge bg-info">@phuCapHocVien.NgayApDung.Value.ToString("dd/MM/yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">--</span>
                                            }
                                        </td>
                                    </tr>
                                    stt++;
                                }
                                @if (!Model.PhuCapHocViens.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-3">
                                            <i class="fas fa-info-circle me-1"></i>Chưa có học viên nào được áp dụng
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin chi tiết (Bên phải) -->
        <div class="col-lg-4 mb-4">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin chi tiết
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fas fa-id-card me-1"></i>Mã Phụ cấp
                        </label>
                        <p class="form-control-plaintext fw-bold text-primary">@Html.DisplayFor(model => model.MaPhuCap)</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fas fa-tag me-1"></i>Tên Phụ cấp
                        </label>
                        <p class="form-control-plaintext fw-bold">@Html.DisplayFor(model => model.TenPhuCap)</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fas fa-money-bill me-1"></i>Mức Phụ cấp cơ bản
                        </label>
                        <div class="form-control-plaintext">
                            @if (Model.MucPhuCapCoBan.HasValue)
                            {
                                <div class="text-success fw-bold">@Model.MucPhuCapCoBan.Value.ToString("N0") VNĐ</div>
                            }
                            else
                            {
                                <span class="text-muted">Chưa xác định</span>
                            }
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.MoTa))
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-file-text me-1"></i>Mô tả
                            </label>
                            <div class="form-control-plaintext">
                                <div>@Model.MoTa</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Empty script for future functionality
        });
    </script>
}