@model QLTienLuong.Models.DanhMucPhuCap

@{
    ViewData["Title"] = "Chỉnh sửa phụ cấp";
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">
            <i class="fas fa-edit me-2"></i>Chỉnh sửa phụ cấp
        </h3>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <!-- Form -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-edit me-2"></i>Cập nhật thông tin phụ cấp
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MaPhuCap" class="form-label">
                                <i class="fas fa-id-card me-1"></i>Mã Phụ cấp
                            </label>
                            <input asp-for="MaPhuCap" class="form-control" readonly />
                            <span asp-validation-for="MaPhuCap" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TenPhuCap" class="form-label">
                                <i class="fas fa-tag me-1"></i>Tên Phụ cấp <span class="text-danger">*</span>
                            </label>
                            <input asp-for="TenPhuCap" class="form-control" placeholder="Nhập tên phụ cấp" />
                            <span asp-validation-for="TenPhuCap" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MucPhuCapCoBan" class="form-label">
                                <i class="fas fa-money-bill me-1"></i>Mức Phụ cấp cơ bản (VNĐ)
                            </label>
                            <input asp-for="MucPhuCapCoBan" class="form-control" type="number" min="0" placeholder="1000000" />
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Mức phụ cấp cơ bản tính bằng VNĐ
                            </div>
                            <span asp-validation-for="MucPhuCapCoBan" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label">
                        <i class="fas fa-file-text me-1"></i>Mô tả
                    </label>
                    <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả về phụ cấp..."></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <hr class="my-4">

                <div class="text-center">
                    <button type="submit" class="btn btn-primary me-3">
                        <i class="fas fa-save me-1"></i>Cập nhật
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Hủy bỏ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Auto focus first editable input
            $('#TenPhuCap').focus();
            
            // Simple number input - no complex formatting needed
            
            // Form validation styling
            $('form').on('submit', function() {
                var $btn = $('button[type="submit"]');
                $btn.prop('disabled', true);
                $btn.html('<i class="fas fa-spinner fa-spin me-1"></i>Đang cập nhật...');
            });
        });
    </script>
}
