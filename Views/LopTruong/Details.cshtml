@model QLTienLuong.Models.HocVien

@{
    ViewData["Title"] = "Chi tiết học viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h5 class="card-title mb-0">
                                <i class="fas fa-user me-2"></i>
                                Chi tiết học viên: @Model.HoTen
                            </h5>
                            <small class="text-muted">Mã: @Model.MaHocVien | Quốc tịch: @Model.MaQuocTichNavigation?.TenQuocTich</small>
                        </div>
                        <div class="card-tools">
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Thông tin cơ bản -->
                        <div class="col-md-6">
                            <div class="card border-0 bg-light">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin cơ bản</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Mã học viên:</strong></div>
                                        <div class="col-sm-8">@Model.MaHocVien</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Họ tên:</strong></div>
                                        <div class="col-sm-8">@Model.HoTen</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Ngày sinh:</strong></div>
                                        <div class="col-sm-8">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "--")</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Khóa:</strong></div>
                                        <div class="col-sm-8">@Model.Khoa</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Lớp:</strong></div>
                                        <div class="col-sm-8">@Model.Lop</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Ngành:</strong></div>
                                        <div class="col-sm-8">@Model.Nganh</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Đơn vị:</strong></div>
                                        <div class="col-sm-8">@Model.DonVi</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Quốc tịch:</strong></div>
                                        <div class="col-sm-8">@Model.MaQuocTichNavigation?.TenQuocTich</div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-sm-4"><strong>Năm tốt nghiệp:</strong></div>
                                        <div class="col-sm-8">@(Model.NamTotNghiep?.ToString() ?? "--")</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Thống kê tổng quan -->
                        <div class="col-md-6">
                            <div class="card border-0 bg-light">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Thống kê tổng quan</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-6 mb-3">
                                            <div class="text-center p-3 bg-primary text-white rounded">
                                                <h4 class="mb-1">@(Model.PhuCapHocViens?.Count ?? 0)</h4>
                                                <small>Phụ cấp</small>
                                            </div>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <div class="text-center p-3 bg-warning text-white rounded">
                                                <h4 class="mb-1">@(Model.KhenThuongKyLuats?.Count ?? 0)</h4>
                                                <small>Khen thưởng</small>
                                            </div>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <div class="text-center p-3 bg-info text-white rounded">
                                                <h4 class="mb-1">@(Model.HocVienTangLuongs?.Count ?? 0)</h4>
                                                <small>Tăng cường</small>
                                            </div>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <div class="text-center p-3 bg-secondary text-white rounded">
                                                <h4 class="mb-1">@(Model.HuongPhuCaps?.Count ?? 0)</h4>
                                                <small>Hưởng phụ cấp</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Danh sách phụ cấp -->
                    @if (Model.PhuCapHocViens?.Any() == true)
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-success text-white">
                                        <h6 class="mb-0"><i class="fas fa-money-bill me-2"></i>Danh sách phụ cấp</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-sm">
                                                <thead>
                                                                                                         <tr>
                                                         <th>Mã phụ cấp</th>
                                                         <th>Tên phụ cấp</th>
                                                         <th>Ngày áp dụng</th>
                                                     </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var phuCap in Model.PhuCapHocViens)
                                                    {
                                                        <tr>
                                                            <td>@phuCap.MaPhuCap</td>
                                                            <td>@phuCap.MaPhuCapNavigation?.TenPhuCap</td>
                                                                                                                         <td class="text-end fw-bold text-success">@phuCap.NgayApDung?.ToString("dd/MM/yyyy")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Danh sách khen thưởng/kỷ luật -->
                    @if (Model.KhenThuongKyLuats?.Any() == true)
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-warning text-white">
                                        <h6 class="mb-0"><i class="fas fa-award me-2"></i>Danh sách khen thưởng/kỷ luật</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-sm">
                                                <thead>
                                                    <tr>
                                                        <th>Ngày quyết định</th>
                                                        <th>Loại hình</th>
                                                        <th>Lý do</th>
                                                        <th>Số tiền</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var khenThuong in Model.KhenThuongKyLuats)
                                                    {
                                                        <tr>
                                                            <td>@khenThuong.NgayQuyetDinh?.ToString("dd/MM/yyyy")</td>
                                                            <td>
                                                                <span class="badge @(khenThuong.LoaiHinh == "Khen thưởng" ? "bg-success" : "bg-danger")">
                                                                    @khenThuong.LoaiHinh
                                                                </span>
                                                            </td>
                                                            <td>@khenThuong.LyDo</td>
                                                            <td class="text-end fw-bold @(khenThuong.SoTien >= 0 ? "text-success" : "text-danger")">
                                                                @khenThuong.SoTien?.ToString("N0") VNĐ
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Danh sách tăng cường -->
                    @if (Model.HocVienTangLuongs?.Any() == true)
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-info text-white">
                                        <h6 class="mb-0"><i class="fas fa-arrow-up me-2"></i>Danh sách tăng cường</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-sm">
                                                <thead>
                                                    <tr>
                                                                                                                 <th>Tháng/Năm</th>
                                                         <th>Mức lương tăng</th>
                                                         <th>Lý do</th>
                                                         <th>Ghi chú</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var tangLuong in Model.HocVienTangLuongs)
                                                    {
                                                                                                                 <tr>
                                                             <td>@tangLuong.ThangNam?.ToString("MM/yyyy")</td>
                                                             <td class="text-end fw-bold text-success">@tangLuong.MaTangLuongNavigation?.MucLuongTang?.ToString("N0") VNĐ</td>
                                                             <td>@tangLuong.MaTangLuongNavigation?.LyDoTangLuong</td>
                                                             <td>@tangLuong.GhiChu</td>
                                                         </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


