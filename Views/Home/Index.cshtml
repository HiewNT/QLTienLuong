@model QLTienLuong.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Báo cáo thống kê";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-chart-line text-primary me-2"></i>
                        Báo cáo thống kê tổng quan
                    </h2>
                    <p class="text-muted mb-0">Hệ thống Quản lý Tiền lương - Học viên Quốc tế</p>
                </div>
                <div class="text-end">
                    <small class="text-muted">Cập nhật: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="stat-icon bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                        <i class="fas fa-users text-primary"></i>
                    </div>
                    <h3 class="stat-number text-primary mb-1">@Model.TotalHocVien.ToString("N0")</h3>
                    <p class="stat-label text-muted mb-0">Tổng học viên</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="stat-icon bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                        <i class="fas fa-award text-success"></i>
                    </div>
                    <h3 class="stat-number text-success mb-1">@Model.TotalKhenThuong.ToString("N0")</h3>
                    <p class="stat-label text-muted mb-0">Khen thưởng/Kỷ luật</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="stat-icon bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                        <i class="fas fa-money-bill-wave text-warning"></i>
                    </div>
                    <h3 class="stat-number text-warning mb-1">@Model.TotalPhuCap.ToString("N0")</h3>
                    <p class="stat-label text-muted mb-0">Tổng phụ cấp</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="stat-icon bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                        <i class="fas fa-arrow-up text-info"></i>
                    </div>
                    <h3 class="stat-number text-info mb-1">@Model.TotalTangLuong.ToString("N0")</h3>
                    <p class="stat-label text-muted mb-0">Tăng cường</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="stat-icon bg-secondary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                        <i class="fas fa-flag text-secondary"></i>
                    </div>
                    <h3 class="stat-number text-secondary mb-1">@Model.TotalQuocTich.ToString("N0")</h3>
                    <p class="stat-label text-muted mb-0">Quốc tịch</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="stat-icon bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                        <i class="fas fa-user-shield text-danger"></i>
                    </div>
                    <h3 class="stat-number text-danger mb-1">@Model.TotalUser.ToString("N0")</h3>
                    <p class="stat-label text-muted mb-0">Người dùng</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Biểu đồ và bảng thống kê -->
    <div class="row">
        <!-- Biểu đồ học viên theo quốc tịch -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-pie text-primary me-2"></i>
                        Phân bố học viên theo quốc tịch
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.HocVienTheoQuocTich.Any())
                    {
                        <div class="chart-container" style="height: 300px;">
                            <canvas id="nationalityChart"></canvas>
                        </div>
                        <div class="chart-legend mt-3">
                            @foreach (var item in Model.HocVienTheoQuocTich)
                            {
                                var percentage = Model.TotalHocVien > 0 ? (item.SoLuong * 100.0 / Model.TotalHocVien) : 0;
                                <div class="legend-item d-flex align-items-center mb-2">
                                    <div class="legend-color me-2" style="width: 12px; height: 12px; background-color: var(--bs-primary); border-radius: 2px;"></div>
                                    <span class="legend-label">@item.TenQuocTich</span>
                                    <span class="legend-value ms-auto">@item.SoLuong (@percentage.ToString("F1")%)</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-chart-pie fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có dữ liệu</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Biểu đồ khen thưởng kỷ luật -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar text-success me-2"></i>
                        Khen thưởng/Kỷ luật theo loại
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.KhenThuongKyLuatTheoLoai.Any())
                    {
                        <div class="chart-container" style="height: 300px;">
                            <canvas id="rewardChart"></canvas>
                        </div>
                        <div class="table-responsive mt-3">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Loại hình</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-end">Tổng tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.KhenThuongKyLuatTheoLoai)
                                    {
                                        <tr>
                                            <td>@item.LoaiHinh</td>
                                            <td class="text-center">@item.SoLuong</td>
                                            <td class="text-end">@item.TongTien.ToString("N0") VNĐ</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có dữ liệu</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Bảng thống kê chi tiết -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-table text-primary me-2"></i>
                        Thống kê chi tiết
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <h6 class="text-primary mb-3">Thông tin hệ thống</h6>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <tbody>
                                        <tr>
                                            <td><strong>Quốc tịch:</strong></td>
                                            <td>@Model.TotalQuocTich</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Người dùng:</strong></td>
                                            <td>@Model.TotalUser</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Học viên mới nhất:</strong></td>
                                            <td>@Model.HocVienMoiNhat.Count()</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Khen thưởng gần đây:</strong></td>
                                            <td>@Model.KhenThuongGanDay.Count()</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <h6 class="text-success mb-3">Hoạt động gần đây</h6>
                            <div class="activity-list">
                                @if (Model.HocVienMoiNhat.Any())
                                {
                                    @foreach (var hocVien in Model.HocVienMoiNhat.Take(3))
                                    {
                                        <div class="activity-item d-flex align-items-center mb-2">
                                            <i class="fas fa-user-plus text-primary me-2"></i>
                                            <span class="small">Học viên mới: <strong>@hocVien.HoTen</strong></span>
                                        </div>
                                    }
                                }
                                @if (Model.KhenThuongGanDay.Any())
                                {
                                    @foreach (var khenThuong in Model.KhenThuongGanDay.Take(2))
                                    {
                                        <div class="activity-item d-flex align-items-center mb-2">
                                            <i class="fas @(khenThuong.LoaiHinh?.Contains("Khen") == true ? "fa-award text-success" : "fa-exclamation-triangle text-danger") me-2"></i>
                                            <span class="small">@khenThuong.LoaiHinh: <strong>@khenThuong.MaHocVienNavigation?.HoTen</strong></span>
                                        </div>
                                    }
                                }
                                @if (!Model.HocVienMoiNhat.Any() && !Model.KhenThuongGanDay.Any())
                                {
                                    <p class="text-muted small">Chưa có hoạt động nào</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bảng thống kê chi tiết từ ThongKe -->
    <div class="row mt-4">
        <!-- Học viên theo quốc tịch - Bảng chi tiết -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-globe text-primary me-2"></i>
                        Học viên theo quốc tịch
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.HocVienTheoQuocTich.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Quốc tịch</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-center">Tỷ lệ (%)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.HocVienTheoQuocTich)
                                    {
                                        var tyLe = Model.TotalHocVien > 0 ? (item.SoLuong * 100.0 / Model.TotalHocVien) : 0;
                                        <tr>
                                            <td><strong>@item.TenQuocTich</strong></td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@item.SoLuong</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="text-success fw-bold">@tyLe.ToString("F1")%</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-globe fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-0">Chưa có dữ liệu</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Khen thưởng/Kỷ luật theo loại - Bảng chi tiết -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-award text-success me-2"></i>
                        Khen thưởng/Kỷ luật theo loại
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.KhenThuongKyLuatTheoLoai.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Loại hình</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-end">Tổng tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.KhenThuongKyLuatTheoLoai)
                                    {
                                        <tr>
                                            <td>
                                                @if (item.LoaiHinh?.Contains("Khen") == true)
                                                {
                                                    <span class="badge bg-success">@item.LoaiHinh</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">@item.LoaiHinh</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">@item.SoLuong</span>
                                            </td>
                                            <td class="text-end">
                                                <span class="text-success fw-bold">@item.TongTien.ToString("N0") VNĐ</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-award fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-0">Chưa có dữ liệu</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.stat-icon {
    width: 60px;
    height: 60px;
}

.stat-number {
    font-size: 2rem;
    font-weight: 700;
}

.stat-label {
    font-size: 0.9rem;
    font-weight: 500;
}

.chart-container {
    position: relative;
}

.chart-legend {
    font-size: 0.85rem;
}

.legend-item {
    font-size: 0.85rem;
}

.legend-label {
    flex: 1;
}

.legend-value {
    font-weight: 600;
    color: #6c757d;
}

.activity-list {
    max-height: 200px;
    overflow-y: auto;
}

.activity-item {
    padding: 0.5rem;
    border-radius: 4px;
    background-color: #f8f9fa;
}

.activity-item:hover {
    background-color: #e9ecef;
}

.card {
    transition: transform 0.2s ease;
}

.card:hover {
    transform: translateY(-2px);
}

.table th {
    font-size: 0.85rem;
    font-weight: 600;
}

.table td {
    font-size: 0.9rem;
    vertical-align: middle;
}
</style>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Dữ liệu cho biểu đồ quốc tịch
    @if (Model.HocVienTheoQuocTich.Any())
    {
        <text>
        const nationalityCtx = document.getElementById('nationalityChart').getContext('2d');
        new Chart(nationalityCtx, {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.HocVienTheoQuocTich.Select(x => $"'{x.TenQuocTich}'")))],
                datasets: [{
                    data: [@string.Join(",", Model.HocVienTheoQuocTich.Select(x => x.SoLuong))],
                    backgroundColor: [
                        '#007bff',
                        '#28a745', 
                        '#ffc107',
                        '#17a2b8',
                        '#6c757d',
                        '#dc3545',
                        '#fd7e14',
                        '#6f42c1'
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
        </text>
    }

    // Dữ liệu cho biểu đồ khen thưởng
    @if (Model.KhenThuongKyLuatTheoLoai.Any())
    {
        <text>
        const rewardCtx = document.getElementById('rewardChart').getContext('2d');
        new Chart(rewardCtx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.KhenThuongKyLuatTheoLoai.Select(x => $"'{x.LoaiHinh}'")))],
                datasets: [{
                    label: 'Số lượng',
                    data: [@string.Join(",", Model.KhenThuongKyLuatTheoLoai.Select(x => x.SoLuong))],
                    backgroundColor: '#28a745',
                    borderColor: '#28a745',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });
        </text>
    }
});
</script>
