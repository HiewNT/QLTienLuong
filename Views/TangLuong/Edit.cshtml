@model QLTienLuong.Models.TangLuong

@{
    ViewData["Title"] = "Sửa Tăng cường";
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-edit me-2 text-warning"></i>Sửa Tăng cường
            </h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách Tăng cường</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.MaTangLuong">Chi tiết</a></li>
                    <li class="breadcrumb-item active">Sửa</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.MaTangLuong" class="btn btn-info">
                <i class="fas fa-eye me-1"></i>Xem chi tiết
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa thông tin Tăng cường
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="MaTangLuong" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MucLuongTang" class="form-label">
                                        <i class="fas fa-coins me-1"></i>Mức tăng cường <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="MucLuongTang" class="form-control money-input" 
                                               type="text"
                                               placeholder="1000000" />
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>Nhập số tiền tăng cường
                                    </div>
                                    <span asp-validation-for="MucLuongTang" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NgayTangLuong" class="form-label">
                                        <i class="fas fa-calendar me-1"></i>Ngày tăng cường
                                    </label>
                                    <input asp-for="NgayTangLuong" class="form-control" type="date" />
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>Ngày bắt đầu áp dụng tăng cường
                                    </div>
                                    <span asp-validation-for="NgayTangLuong" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LyDoTangLuong" class="form-label">
                                <i class="fas fa-info-circle me-1"></i>Lý do tăng cường
                            </label>
                            <textarea asp-for="LyDoTangLuong" class="form-control" rows="3" 
                                      placeholder="Nhập lý do tăng cường..."></textarea>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Mô tả lý do tăng cường (không bắt buộc)
                            </div>
                            <span asp-validation-for="LyDoTangLuong" class="text-danger"></span>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex gap-2 justify-content-end">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>Lưu thay đổi
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.MaTangLuong" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy bỏ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-focus on first input
            $('#MucLuongTang').focus();

            // Money input formatting
            $('.money-input').on('input', function() {
                var value = $(this).val();
                // Remove all non-digit characters
                var numericValue = value.replace(/[^\d]/g, '');
                if (numericValue) {
                    // Format with commas
                    $(this).val(parseInt(numericValue).toLocaleString('vi-VN'));
                }
            });



            // Form submission - convert money back to numeric
            $('form').on('submit', function() {
                var moneyInput = $('#MucLuongTang');
                var value = moneyInput.val();
                if (value) {
                    var numericValue = parseInt(value.replace(/[^\d]/g, ''));
                    if (!isNaN(numericValue)) {
                        moneyInput.val(numericValue);
                    }
                }
            });
        });
    </script>
}
