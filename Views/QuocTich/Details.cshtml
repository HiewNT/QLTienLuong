@model QLTienLuong.Models.QuocTich

@{
    ViewData["Title"] = "Chi tiết Quốc tịch";
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-flag me-2"></i>Chi tiết Quốc tịch
            </h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            <i class="fas fa-flag me-1"></i>Quốc tịch
                        </a>
                    </li>
                    <li class="breadcrumb-item active">@Model.TenQuocTich</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.MaQuocTich" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin cơ bản -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin cơ bản
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label text-muted">
                                <i class="fas fa-id-card me-1"></i>Mã Quốc tịch
                            </label>
                            <p class="form-control-plaintext fw-bold text-primary">@Html.DisplayFor(model => model.MaQuocTich)</p>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted">
                                <i class="fas fa-flag me-1"></i>Tên Quốc tịch
                            </label>
                            <p class="form-control-plaintext fw-bold">@Html.DisplayFor(model => model.TenQuocTich)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thống kê -->
        <div class="col-lg-8 mb-4">
             <!-- Danh sách học viên -->
            @if (Model.HocViens.Any())
            {
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-users me-2"></i>Danh sách Học viên (@Model.HocViens.Count)
                        </h5>
                        <a asp-controller="HocVien" asp-action="Index" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-external-link-alt me-1"></i>Xem tất cả
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã HV</th>
                                        <th>Họ và Tên</th>
                                        <th>Ngày sinh</th>
                                        <th>Khóa</th>
                                        <th>Lớp</th>
                                        <th>Ngành</th>
                                        <th width="100">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var hocVien in Model.HocViens.Take(10))
                                    {
                                        <tr>
                                            <td>
                                                <strong class="text-primary">@hocVien.MaHocVien</strong>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-circle fa-lg text-info me-2"></i>
                                                    <div>
                                                        <strong>@hocVien.HoTen</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (hocVien.NgaySinh.HasValue)
                                                {
                                                    <span class="text-muted">@hocVien.NgaySinh.Value.ToString("dd/MM/yyyy")</span>
                                                }
                                            </td>
                                            <td>@hocVien.Khoa</td>
                                            <td>@hocVien.Lop</td>
                                            <td>@hocVien.Nganh</td>
                                            <td>
                                                <a asp-controller="HocVien" asp-action="Details" asp-route-id="@hocVien.MaHocVien" 
                                                class="btn btn-sm btn-outline-info" title="Chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        @if (Model.HocViens.Count > 10)
                        {
                            <div class="text-center mt-3">
                                <p class="text-muted">
                                    Hiển thị 10 trong số @Model.HocViens.Count học viên. 
                                    <a asp-controller="HocVien" asp-action="Index" class="text-decoration-none">
                                        Xem tất cả <i class="fas fa-arrow-right"></i>
                                    </a>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Chưa có học viên nào</h5>
                        <p class="text-muted">Chưa có học viên nào thuộc quốc tịch này.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
.stat-item {
    padding: 1rem;
}
.stat-icon {
    margin-bottom: 0.5rem;
}
</style>
