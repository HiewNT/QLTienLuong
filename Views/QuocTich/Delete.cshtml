@model QLTienLuong.Models.QuocTich

@{
    ViewData["Title"] = "Xóa Quốc tịch";
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1 text-danger">
                <i class="fas fa-trash me-2"></i>Xóa Quốc tịch
            </h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            <i class="fas fa-flag me-1"></i>Quốc tịch
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Xóa: @Model.TenQuocTich</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <!-- Warning Card -->
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa quốc tịch này không? 
                Hành động này không thể hoàn tác.
            </div>

            <!-- Thông tin sẽ xóa -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label text-muted">
                        <i class="fas fa-id-card me-1"></i>Mã Quốc tịch
                    </label>
                    <p class="form-control-plaintext fw-bold text-primary">@Html.DisplayFor(model => model.MaQuocTich)</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label text-muted">
                        <i class="fas fa-flag me-1"></i>Tên Quốc tịch
                    </label>
                    <p class="form-control-plaintext fw-bold">@Html.DisplayFor(model => model.TenQuocTich)</p>
                </div>
            </div>

            <!-- Kiểm tra ràng buộc -->
            @if (Model.HocViens.Any())
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-times-circle me-2"></i>
                    <strong>Không thể xóa!</strong> 
                    Quốc tịch này đang được sử dụng bởi <strong>@Model.HocViens.Count học viên</strong>.
                    <br>
                    <small>Bạn cần xóa hoặc chuyển các học viên sang quốc tịch khác trước khi có thể xóa.</small>
                </div>
                
                <div class="mt-3">
                    <h6>Danh sách học viên đang sử dụng:</h6>
                    <ul class="list-group list-group-flush">
                        @foreach (var hocVien in Model.HocViens.Take(5))
                        {
                            <li class="list-group-item px-0">
                                <i class="fas fa-user me-2"></i>
                                <strong>@hocVien.MaHocVien</strong> - @hocVien.HoTen
                            </li>
                        }
                        @if (Model.HocViens.Count > 5)
                        {
                            <li class="list-group-item px-0 text-muted">
                                <i class="fas fa-ellipsis-h me-2"></i>
                                Và @(Model.HocViens.Count - 5) học viên khác...
                            </li>
                        }
                    </ul>
                </div>
            }

            <!-- Actions -->
            <div class="d-flex gap-2 mt-4">
                @if (!Model.HocViens.Any())
                {
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="MaQuocTich" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')">
                            <i class="fas fa-trash me-1"></i>Xác nhận xóa
                        </button>
                    </form>
                }
                else
                {
                    <button type="button" class="btn btn-danger" disabled>
                        <i class="fas fa-ban me-1"></i>Không thể xóa
                    </button>
                }
                <a asp-action="Details" asp-route-id="@Model.MaQuocTich" class="btn btn-info">
                    <i class="fas fa-eye me-1"></i>Xem chi tiết
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Hủy bỏ
                </a>
            </div>
        </div>
    </div>
</div>
