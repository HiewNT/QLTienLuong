@model QLTienLuong.Models.QuocTich

@{
    ViewData["Title"] = "Thêm Quốc tịch";
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-plus-circle me-2"></i>Thêm Quốc tịch mới
            </h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            <i class="fas fa-flag me-1"></i>Quốc tịch
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <!-- Form -->
    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="MaQuocTich" class="form-label">
                                <i class="fas fa-id-card me-1"></i>Mã Quốc tịch <span class="text-danger">*</span>
                            </label>
                            <input asp-for="MaQuocTich" class="form-control" placeholder="VD: VN, US, JP, CN..." maxlength="10" style="text-transform: uppercase;" />
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Nhập mã quốc tịch theo chuẩn quốc tế (VD: VN, US, JP)
                            </div>
                            <span asp-validation-for="MaQuocTich" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TenQuocTich" class="form-label">
                                <i class="fas fa-flag me-1"></i>Tên Quốc tịch <span class="text-danger">*</span>
                            </label>
                            <input asp-for="TenQuocTich" class="form-control" placeholder="VD: Việt Nam, Hoa Kỳ, Nhật Bản..." />
                            <span asp-validation-for="TenQuocTich" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Lưu thông tin
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Hủy bỏ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Auto focus first input
            $('#MaQuocTich').focus();
            
            // Auto uppercase for country code
            $('#MaQuocTich').on('input', function() {
                this.value = this.value.toUpperCase();
            });
            
            // Form validation styling
            $('form').on('submit', function() {
                var $btn = $('button[type="submit"]');
                $btn.prop('disabled', true);
                $btn.html('<i class="fas fa-spinner fa-spin me-1"></i>Đang lưu...');
                
                setTimeout(function() {
                    $btn.prop('disabled', false);
                    $btn.html('<i class="fas fa-save me-1"></i>Lưu thông tin');
                }, 3000);
            });
        });
    </script>
}
