@model QLTienLuong.Models.UserEditViewModel

@{
    ViewData["Title"] = "Sửa Người dùng";
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-edit me-2 text-warning"></i>Sửa Người dùng
            </h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách Người dùng</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.MaUser">Chi tiết</a></li>
                    <li class="breadcrumb-item active">Sửa</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.MaUser" class="btn btn-info">
                <i class="fas fa-eye me-1"></i>Xem chi tiết
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa thông tin Người dùng
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="MaUser" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MaHocVien" class="form-label">
                                        <i class="fas fa-user me-1"></i>Học viên
                                    </label>
                                    <select asp-for="MaHocVien" asp-items="ViewBag.MaHocVien" class="form-select">
                                        <option value="">-- Chọn học viên --</option>
                                    </select>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>Chọn học viên để liên kết với tài khoản
                                    </div>
                                    <span asp-validation-for="MaHocVien" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MaRole" class="form-label">
                                        <i class="fas fa-shield-alt me-1"></i>Vai trò <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="MaRole" asp-items="ViewBag.MaRole" class="form-select">
                                        <option value="">-- Chọn vai trò --</option>
                                    </select>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>Vai trò quyết định quyền truy cập
                                    </div>
                                    <span asp-validation-for="MaRole" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label">
                                        <i class="fas fa-user-circle me-1"></i>Tên đăng nhập <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Username" class="form-control" placeholder="VD: admin, user123" />
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>Tên đăng nhập phải là duy nhất
                                    </div>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">
                                        <i class="fas fa-lock me-1"></i>Mật khẩu mới
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Để trống nếu không đổi" id="passwordInput" />
                                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>Chỉ nhập nếu muốn thay đổi mật khẩu (mã hóa SHA256)
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Active" class="form-check-input" type="checkbox" />
                                <label asp-for="Active" class="form-check-label">
                                    <i class="fas fa-toggle-on me-1"></i>Kích hoạt tài khoản
                                </label>
                            </div>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Chỉ tài khoản được kích hoạt mới có thể đăng nhập
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex gap-2 justify-content-end">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>Lưu thay đổi
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.MaUser" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy bỏ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Auto focus on username field
            $('#Username').focus();
            
            // Toggle password visibility
            $('#togglePassword').on('click', function() {
                const passwordInput = $('#passwordInput');
                const icon = $(this).find('i');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
            
            // Form validation styling
            $('form').on('submit', function() {
                var $btn = $('button[type="submit"]');
                $btn.prop('disabled', true);
                $btn.html('<i class="fas fa-spinner fa-spin me-1"></i>Đang lưu...');
                
                setTimeout(function() {
                    $btn.prop('disabled', false);
                    $btn.html('<i class="fas fa-save me-1"></i>Lưu thay đổi');
                }, 3000);
            });
        });
    </script>
}
