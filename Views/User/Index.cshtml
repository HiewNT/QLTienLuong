@model IEnumerable<QLTienLuong.Models.User>

@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-users me-2 text-primary"></i>Quản lý Người dùng
            </h4>
            <p class="text-muted mb-0">Danh sách người dùng trong hệ thống</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Thêm người dùng
            </a>
        </div>
    </div>



    <!-- Table Card -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="userTable" class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th width="80">Mã</th>
                            <th width="200">Học viên</th>
                            <th width="150">Tên đăng nhập</th>
                            <th width="120">Vai trò</th>
                            <th width="120">Trạng thái</th>
                            <th width="120">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <span class="badge bg-primary">@item.MaUser</span>
                                </td>
                                <td>
                                    @if (item.MaHocVienNavigation != null)
                                    {
                                        <div class="fw-bold">@item.MaHocVienNavigation.HoTen</div>
                                        <small class="text-muted">@item.MaHocVien</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td>
                                    <div class="fw-bold text-primary">@item.Username</div>
                                </td>
                                <td class="text-center">
                                    @if (item.MaRoleNavigation != null)
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-shield-alt me-1"></i>@item.MaRoleNavigation.TenRole
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input toggle-active" type="checkbox" 
                                               data-id="@item.MaUser" 
                                               @(item.Active == true ? "checked" : "")>
                                        <label class="form-check-label">
                                            @if (item.Active == true)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Không hoạt động</span>
                                            }
                                        </label>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.MaUser" 
                                           class="btn btn-outline-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.MaUser" 
                                           class="btn btn-outline-warning" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MaUser" 
                                           class="btn btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#userTable').DataTable({
                language: {
                    "sProcessing": "Đang xử lý...",
                    "sLengthMenu": "Xem _MENU_ mục",
                    "sZeroRecords": "Không tìm thấy dữ liệu",
                    "sInfo": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ mục",
                    "sInfoEmpty": "Đang xem 0 đến 0 trong tổng số 0 mục",
                    "sInfoFiltered": "(được lọc từ _MAX_ mục)",
                    "sInfoPostFix": "",
                    "sSearch": "Tìm kiếm:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "Đầu",
                        "sPrevious": "Trước",
                        "sNext": "Tiếp",
                        "sLast": "Cuối"
                    }
                },
                responsive: true,
                pageLength: 25,
                order: [[0, 'desc']], // Sort by ID desc
                columnDefs: [
                    { orderable: false, targets: [4, 5] } // Status and Actions columns
                ]
            });

            // Toggle active status
            $('.toggle-active').on('change', function() {
                const $checkbox = $(this);
                const userId = $checkbox.data('id');
                const isActive = $checkbox.is(':checked');
                
                $checkbox.prop('disabled', true);
                
                $.post('@Url.Action("ToggleActive")', { id: userId })
                    .done(function(response) {
                        if (response.success) {
                            // Update the label
                            const $label = $checkbox.next('label');
                            if (response.active) {
                                $label.html('<span class="badge bg-success">Hoạt động</span>');
                            } else {
                                $label.html('<span class="badge bg-secondary">Không hoạt động</span>');
                            }
                        } else {
                            // Revert checkbox if failed
                            $checkbox.prop('checked', !isActive);
                        }
                    })
                    .fail(function() {
                        // Revert checkbox if failed
                        $checkbox.prop('checked', !isActive);
                    })
                    .always(function() {
                        $checkbox.prop('disabled', false);
                    });
            });
        });
    </script>
}
